term-shortcuts() {
  printf '%-20s' 'control + A'
  printf '\e[1;34m%s\e[0m\n' 'move to the beginning of line'
  printf '%-20s' 'control + E'
  printf '\e[1;34m%s\e[0m\n' 'move to the end of line'
  printf '%-20s' 'option (alt) + F'
  printf '\e[1;34m%s\e[0m\n' 'move forward a word'
  printf '%-20s' 'option (alt) + B'
  printf '\e[1;34m%s\e[0m\n' 'move backward a word'
  printf '%-20s' 'control + U'
  printf '\e[1;34m%s\e[0m\n' 'cut the line before the cursor'
  printf '%-20s' 'control + K'
  printf '\e[1;34m%s\e[0m\n' 'cut line after the cursor'
  printf '%-20s' 'control + W'
  printf '\e[1;34m%s\e[0m\n' 'cut the word before the cursor'
  printf '%-20s' 'option (alt) + D'
  printf '\e[1;34m%s\e[0m\n' 'cut the word after the cursor'
  printf '%-20s' 'control + Y'
  printf '\e[1;34m%s\e[0m\n' 'paste from buffer'
  printf '%-20s' 'esc + T'
  printf '\e[1;34m%s\e[0m\n' 'transpose the two words before the cursor'
  printf '%-20s' 'control + R'
  printf '\e[1;34m%s\e[0m\n' 'search history'
}
